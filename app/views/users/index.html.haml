- set_meta_tags title: t("user.users")

.row
  %div{class: Sni::Center.call(xl: 4, lg: 6, md: 8, sm: 10)}
    %section
      .header.text-center
        %h3= t("user.users")
      .body{"data-turbo" => "true"}
        = turbo_frame_tag :results, "data-turbo-action" => "advance" do
          %table{class: "table table-bordered table-sm mt-3"}
            %thead
              %tr
                %th= t("user.handle")
                %th= t("user.name.name")
            %tbody
              = render "results", users: @users
      .footer
        = link_to t("user.new"), new_user_path, class: "btn btn-primary btn-sm"
